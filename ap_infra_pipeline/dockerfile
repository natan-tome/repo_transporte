# ğŸ—ï¸ Imagem base com Terraform (versÃ£o fixa para evitar quebras)
FROM hashicorp/terraform:1.6

# ğŸ“¦ Instala dependÃªncias do sistema e Python com pip
RUN apk add --no-cache --update \
    python3 \
    py3-pip \
    curl \
    bash \
    build-base \
    libffi-dev \
    openssl-dev \
    && ln -sf python3 /usr/bin/python  # ğŸ”— Cria alias 'python' para python3

# ğŸ”’ Cria e configura ambiente virtual isolado
RUN python3 -m venv /opt/venv && \
    /opt/venv/bin/pip install --no-cache-dir --upgrade pip setuptools wheel && \
    /opt/venv/bin/pip install databricks-cli requests  # âœ… Usa caminho absoluto do pip

# ğŸ›£ï¸ Configura PATH para incluir o ambiente virtual globalmente
ENV PATH="/opt/venv/bin:$PATH"

# ğŸ“‚ Define diretÃ³rio de trabalho e copia toda a infraestrutura como cÃ³digo
WORKDIR /infra
COPY . .

# ğŸš€ Define entrypoint padrÃ£o (script de inicializaÃ§Ã£o personalizado)
ENTRYPOINT ["sh", "./entrypoint.sh"]

