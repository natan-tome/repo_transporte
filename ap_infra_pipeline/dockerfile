# 🏗️ Imagem base com Terraform (versão fixa para evitar quebras)
FROM hashicorp/terraform:1.6

# 📦 Instala dependências do sistema e Python com pip
RUN apk add --no-cache --update \
    python3 \
    py3-pip \
    curl \
    bash \
    build-base \
    libffi-dev \
    openssl-dev \
    && ln -sf python3 /usr/bin/python  # 🔗 Cria alias 'python' para python3

# 🔒 Cria e configura ambiente virtual isolado
RUN python3 -m venv /opt/venv && \
    /opt/venv/bin/pip install --no-cache-dir --upgrade pip setuptools wheel && \
    /opt/venv/bin/pip install databricks-cli requests  # ✅ Usa caminho absoluto do pip

# 🛣️ Configura PATH para incluir o ambiente virtual globalmente
ENV PATH="/opt/venv/bin:$PATH"

# 📂 Define diretório de trabalho e copia toda a infraestrutura como código
WORKDIR /infra
COPY . .

# 🚀 Define entrypoint padrão (script de inicialização personalizado)
ENTRYPOINT ["sh", "./entrypoint.sh"]

