FROM hashicorp/terraform:1.6

# ğŸ“¦ Instala dependÃªncias do sistema (Python e ferramentas CLI)
RUN apk add --no-cache python3 py3-pip bash curl jq

# ğŸ”’ Cria ambiente virtual isolado e instala databricks-cli
RUN python3 -m venv /opt/venv \
 && /opt/venv/bin/pip install --no-cache-dir --upgrade pip \
 && /opt/venv/bin/pip install databricks-cli requests

# ğŸ›£ï¸ Configura PATH para incluir o ambiente virtual globalmente
ENV PATH="/opt/venv/bin:$PATH"

# ğŸ“‚ Define diretÃ³rio de trabalho e copia toda a infraestrutura
WORKDIR /infra
COPY . .

# ğŸ”’ Torna scripts executÃ¡veis
RUN chmod +x entrypoint.sh scripts/destroy.sh

# ğŸš€ Define entrypoint padrÃ£o (script de inicializaÃ§Ã£o)
ENTRYPOINT ["sh", "./entrypoint.sh"]
